<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootForFragmentAdd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentAdd" >

    <TextView
        android:id="@+id/textViewAddResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonBackToHomeFromAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Back to home"
        app:layout_constraintEnd_toEndOf="@+id/textViewAddResult"
        app:layout_constraintStart_toStartOf="@+id/textViewAddResult"
        app:layout_constraintTop_toBottomOf="@+id/textViewAddResult" />
</androidx.constraintlayout.widget.ConstraintLayout>